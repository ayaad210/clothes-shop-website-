@model IEnumerable<Shop.Order>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/SellsLayOut.cshtml";

}

<h2>المبيعات</h2>


<table class="table" style="font-size:16px">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DateTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TotalPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SellPrice)
        </th>
      
        <th>
            @Html.DisplayNameFor(model => model.Customer.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.User.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DateTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TotalPrice)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SellPrice)
        </td>
      
        <td>
            @Html.DisplayFor(modelItem => item.Customer.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.User.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditOrder", new { id=item.id },new { @class = "btn btn-primary" })        
        </td>
    </tr>
}

</table>
